[colors]
background = #000000
foreground = #f1e9ef
highlight = #f48342
alert = #f00

secondary = #7989b4

[bar/lamia]
bottom = true
width = 100%
height = 22
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #000000

border-size = 0
border-color = #000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 0

font-0 = Inconsolata-dz:pixelsize=12
font-1 = FontAwesome5Free:style=Solid:pixelsize=11
;font-2 = DejaVuSans:style=Book:pixelsize=10
font-2 = NotoEmoji-Regular:pixelsize=7

modules-left = i3 xwindow xkeyboard
modules-center = filesystem memory cpu
modules-right = nm wlan pkg volume battery date

tray-position = right
tray-transparent = false
; tray-padding = 2
; tray-maxsize = 16

wm-restack = i3

; override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/pkg]
type = custom/script
interval = 1200
format = <label>
label = "%output:0:30%"
exec = bash .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/xwindow]
type = internal/xwindow
label = %{F#f48342}%title:0:30:...%
label-background = ${colors.highlight}

[module/xkeyboard]
type = internal/xkeyboard

label-layout = %layout%
label-layout-foreground = ${colors.background}

label-indicator-padding = 1

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /run/media/adam/UUI

label-mounted = %{F#f48342}%mountpoint%%{F-}: %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.highlight}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.highlight}


; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.highlight}
label-focused-background = ${colors.highlight}
label-focused-underline= ${colors.background}
label-focused-padding = 5

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "Ôãõ "
format-prefix-foreground = ${colors.highlight}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "Ôà≥ "
format-prefix-foreground = ${colors.highlight}
label = %gb_free%

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 1.0

format-connected = <label-connected>
label-connected = Ôá´ %{F#00a376}%local_ip% %{F#f1e9ef}%downspeed:9% %upspeed:9%

format-disconnected = <label-disconnected>
label-disconnected = %ifname% DOWN
label-disconnected-foreground = ${colors.alert}

;ramp-signal-0 = üò±
;ramp-signal-1 = üò†
;ramp-signal-2 = üòí
;ramp-signal-3 = üòä
;ramp-signal-4 = üòÉ
;ramp-signal-5 = üòà
;ramp-signal-foreground = ${colors.highlight}

[module/date]
type = internal/date
interval = 5

date = "%a %Y-%m-%d"
time = %I:%M:%S %P

format-prefix = ÓÄñ
format-prefix-foreground = ${colors.highlight}

label = %date% %time%

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <bar-volume> <label-volume>
label-volume = %percentage%
label-muted = ÔÄ¶ muted
label-volume-foreground = ${colors.highlight}
label-muted-foreground = ${colors.highlight}
ramp-volume-0 = ÔÄ®
ramp-volume-1 = ÔÄ®
ramp-volume-2 = ÔÄ®
ramp-volume-foreground = ${colors.highlight}
bar-volume-width = 10
bar-volume-indicator = ¬∑
bar-volume-fill = ¬∑
bar-volume-empty = ¬∑
bar-volume-foreground-0 = ${colors.highlight}
bar-volume-indicator-foreground = ${colors.highlight}
bar-volume-empty-foreground = ${colors.foreground}

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = Charging %percentage%%

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = %percentage%%

; Available tokens:
;   %percentage% (default)
label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
; Framerate in milliseconds
animation-charging-framerate = 750

[settings]
screenchange-reload = true
compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

[module/title]
type = internal/xwindow


